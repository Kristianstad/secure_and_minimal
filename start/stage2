#!/bin/sh
set -e +a +m +s +i -f

# Set by shell:
# -------------------------------------------
# IFS


. /start/common.functions
. /start/stage2.functions

readonly ifs_bak=$IFS

if [ "$(isFirstrun)" == "true" ]
then
   readFirstrunEnvironment
   if [ -n "$CONFIG_DIR" ]
   then
      /bin/chown -R $LINUX_USER:root "$CONFIG_DIR"
      /bin/chmod 7770 "$CONFIG_DIR"
      if [ "$(ls -A "$CONFIG_DIR")" ]
      then
         set +f
         /bin/chmod -R ug=rw,o= "$CONFIG_DIR/"*
         set -f
      fi
   fi
   . /start/stage3
   writeRestartEnvironment
else
   readRestartEnvironment
   . /start/stage3
fi
