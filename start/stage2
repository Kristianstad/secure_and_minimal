#!/bin/sh
set -e +a +m +s +i -f

# Set by shell:
# -------------------------------------------
# IFS


. /start/common.functions
. /start/stage2.functions

readonly ifs_bak=$IFS
setConst LINUX_USER
setConst CONFIG_FILE
setConst CONFIG_DIR

if [ "$(isFirstrun)" == "true" ]
then
   env_list="$(readFirstrunEnvironment)"
   makeAllFromEnvList
   if [ -n "$CONFIG_DIR" ]
   then
      /bin/chown -R $LINUX_USER:root "$CONFIG_DIR"
      /bin/chmod 7770 "$CONFIG_DIR"
      if [ "$(ls -A "$CONFIG_DIR")" ]
      then
         set +f
         /bin/chmod -R ug=rw,o= "$CONFIG_DIR/"*
         set -f
      fi
   fi
else
   env_list="$(readRestartEnvironment)"
fi
. /start/stage3
