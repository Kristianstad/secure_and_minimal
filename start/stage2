#!/bin/sh

startStage2(){
   set -e +a +m +s +i -f
   local VAR_FINAL_COMMAND
   . /start/stage2.functions
   . /environment/vars
   if [ "$1" == "firstrun" ]
   then
      createLinuxUser
      updateSudoersConf
      fixHosts
      makeAllFromList "$(allVars noquote)"
      fixPermissionsForUsrLocalBin
   fi
   tryRunStage 3
   allVars quote > /environment/vars
   execCmdAsLinuxUser $VAR_FINAL_COMMAND
}

readonly IFS_bak=$IFS
startStage2 $1
