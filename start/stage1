#!/bin/sh
set -e +a +m +s +i -f

. /start/common.functions
. /start/stage1.functions

if [ "$(isSomethingToDo)" == "true" ]
then
   if [ "$(isFirstrun)" == "true" ]
   then
      createLinuxUser
      updateSudoersConf
      writeFirstrunEnvironment
   fi
   clearEnvironment
   startStage2
else
   clearEnvironment
fi
