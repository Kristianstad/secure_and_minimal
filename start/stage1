#!/bin/sh
set -e +a +m +s +i -f

. /start/common.functions
. /start/stage1.functions

if [ "$(isSomethingToDo)" == "true" ]
then
   firstrun="$(isFirstrun)"
   if [ "$firstrun" == "true" ]
   then
      createLinuxUser
      updateSudoersConf
      writeFirstrunEnvironment
   fi
   executeCommand "firstrun=$firstrun /start/stage2"
else
   echo "Nothing to do!"
fi
