#!/bin/sh
set -e +a +m +s +i -f

# Set in Dockerfile or at runtime:
# -------------------------------------------
# VAR_*

. /start/stage1.functions

readonly IFS_bak=$IFS
if [ "$(isSomethingToDo)" == "true" ]
then
   if [ -f "/environment/firstrun" ]
   then
      firstrun="true"
      createLinuxUser
      updateSudoersConf
      writeFirstrunEnvironment
      fixHosts
   else
      firstrun="false"
   fi
   executeCommand "firstrun=$firstrun /start/stage2"
else
   echo "Nothing to do!"
fi
