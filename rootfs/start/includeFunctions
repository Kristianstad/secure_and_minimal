includeFunctions(){

   local functionsDir="${0%/*}/functions"
   if [ -d "$functionsDir" ]
   then
      local function=""
      local -
      set +f
      for function in "$functionsDir/"*
      do
         if [ -f "$function" ]
         then
            type ${function##*/} > /dev/null || . "$function"
         fi
      done
   fi
}

includeFunctions
