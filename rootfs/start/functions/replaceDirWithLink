replaceDirWithLink() {
   local dir=$1
   local link=$2
   if [ "$link" != "$dir" ]
   then
      if [ ! -s "$link" ] && [ -s "$dir" ]
      then
         local -
         set +f
         cp -a "$dir/"* "$link/"
         set -f
      fi
      if [ -e "$dir" ]
      then
         rm -rf "$dir"
      fi
      ln -s "$link" "$dir"
   fi
}
