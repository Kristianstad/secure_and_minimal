createLinuxUser(){
   local user="${1:-$VAR_LINUX_USER}"
   local uid=${2:-102}
   local gid==${3:-$uid}
   if ! /usr/bin/id $user > /dev/null 2>&1
   then
      while /bin/grep -q "x:$uid" /etc/passwd || /bin/grep -q "x:$uid" /etc/group
      do
         uid=$(expr $uid + 1)
      done
      echo "$user:x:$uid:$gid:$user:/dev/null:/sbin/nologin" >> /etc/passwd
      echo "$user:x:$uid:$user" >> /etc/group
   fi
}
