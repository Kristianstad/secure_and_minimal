createLinuxUser(){
   local user="${1:-$VAR_LINUX_USER}"
   local id=${2:-102}
   if ! /usr/bin/id $user > /dev/null 2>&1
   then
      while /usr/bin/id $id > /dev/null 2>&1
      do
         id=$(expr $id + 1)
      done
      echo "$user:x:$id:0:$user:/dev/null:/sbin/nologin" >> /etc/passwd
      echo "$user:x:$id:$user" >> /etc/group
   fi
}
