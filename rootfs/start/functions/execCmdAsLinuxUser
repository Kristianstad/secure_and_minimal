[ $(type -t execCmd) ] || . /start/functions/execCmd

execCmdAsLinuxUser(){
   if [ -n "$1" ]
   then
      local command="$(eval "echo $1")"
      if [ "$2" == "final" ]
      then
         ec="execFinalCmd"
      else
         ec="execCmd"
      fi
      $ec "/usr/local/bin/sudo -u $VAR_LINUX_USER $command"
   else
      echo 'execCmdAsLinuxUser: Nothing to do!'
   fi
}
