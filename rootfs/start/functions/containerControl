containerControl(){
   local isFirstRun=$1
   readEnvironmentVars
   local finalUser=$VAR_LINUX_USER
   if [ "$isFirstRun" == "true" ]
   then
      createLinuxUser
      updateSudoersConf
      fixHosts
      makeAllFromList "$(allVars noquote)"
      fixPermissionsForUsrLocalBin
      local finalCmdString="$VAR_FINAL_COMMAND &"
      echo "tryRunStage"
      tryRunStage 3
      {
         echo -e "$finalCmdString"
         echo 'PID=$!'
         echo 'wait $PID'
         echo 'trap - $sig'
         echo 'wait $PID'
         echo 'EXIT_STATUS=$?'
      } >> /stop/stage1
      /bin/chgrp -R $finalUser /stop /usr/local/bin /start
   else
      tryRunStage 3
   fi
   allVars quote > /environment/vars
   execCmdAsUser /stop/stage1 $finalUser
}
